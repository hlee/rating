require 'rubygems'
require 'rake'

begin
  require 'jeweler'
  
  Jeweler::Tasks.new do |spec|
    spec.name                   = "rating_rails3"
    spec.version                = "0.8"
    spec.summary                = "Provides a simple way to add rating functionality to your application."
    spec.description            = "Provides a simple way to add rating functionality to your application."
    spec.homepage               = "https://github.com/hlee/rating_rails3.git"
    spec.authors                = ["Ken Lu"]
    spec.email                  = ["ken@wnel.net"]
    spec.has_rdoc               = true
    spec.files.exclude          'init.rb'
  end
  
rescue LoadError
  puts "Jeweler not available. Install it with: gem install jeweler"
end
